</section><header>
<div class="page-header">
    <h1>User Login</h1>
</div>
</header>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<form ng-submit="main.doLogin(loginData)">

<center>
        <div class="imgcontainer">
            <img src="./images/people.png" alt="Avatar" class="avatar">
        </div>
</center>
    <div class="container">
    <label>Username:</label>
    <input class="form-control"  type="text" name="username" placeholder="please enter username" ng-model="main.loginData.username">
    <br>

    <label>Password:</label>
    <input class="form-control"  type="password" name="password" placeholder="please enter username" ng-model="main.loginData.password">
    <br>
    <button class="button button1" type="submit">Login</button>
    <br>
    <label>
        <input type="checkbox" checked="checked" name="remember"> Remember me
    </label>
    <br>
        <div class="reset">
            <a href="/resetpassword">
                <button ng-disabled="main.disabled || facebook.disabled || twitter.disabled || google.disabled" type="button" class="btn btn-danger">Forgot Password</button>
            </a>
            <a href="/resetusername">
                <button ng-disabled="main.disabled || facebook.disabled || twitter.disabled || google.disabled" type="button" class="btn btn-info">Forgot Username</button>
            </a>
        </div>

        <!--<button type="button1" class="cancelbtn">Cancel</button>-->
        <!--<span class="psw">Forgot <a href="#">password?</a></span>-->
    </div>

    <div class="container">
        <ul class="icons">
            <li><button type ="button" class="icon fa-facebook" ng-click="main.facebook()"><span class="label">Facebook</span></button></li>
            <li><button type ="button"  class="icon fa-twitter"  ng-click="main.twitter()"><span class="label">Twitter</span></button></li>
            <li><button type ="button"  class="icon fa-google"  ng-click="main.google()"><span class="label">Google</span></button></li>
        </ul></div>

<br>

<div class="jumbotron text-center" ng-show="main.loading">
    <span class="glyphicon glyphicon-repeat spinner"></span>
    <p>Loading........</p>
</div>
<br>


<div clas="row show-hide-message" ng-show="main.successMsg">
    <div class="alert alert-success">
        {{main.successMsg}}
    </div>
</div>

<br>

<div clas="row show-hide-message" ng-show="main.errorMsg">
    <div class="alert alert-danger">
        {{main.errorMsg}}
    </div>   </div>

    <div clas="row show-hide-message" ng-show="facebook.errorMsg">
        <div class="alert alert-danger">
            {{facebook.errorMsg}}
        </div>
    </div>

        <div clas="row show-hide-message" ng-show="twitter.errorMsg">
            <div class="alert alert-danger">
                {{twitter.errorMsg}}
            </div>
</div>        <div clas="row show-hide-message" ng-show="google.errorMsg">
            <div class="alert alert-danger">
                {{google.errorMsg}}
            </div>
</div>
